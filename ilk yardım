<!DOCTYPE html>
<html lang="tr">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>İlk Yardım Rehberi ve Quiz</title>
<style>
body{margin:0;font-family:'Segoe UI',sans-serif;background:#1e3c72;color:white;}
header{text-align:center;padding:20px;font-size:22px;font-weight:bold;}
.container{max-width:800px;margin:auto;padding:20px;}
.card{background:rgba(255,255,255,0.12);backdrop-filter:blur(10px);padding:20px;border-radius:20px;box-shadow:0 8px 20px rgba(0,0,0,0.3);margin-bottom:20px;animation:fade 0.4s ease;}
@keyframes fade{from{opacity:0; transform:translateY(15px);}to{opacity:1; transform:translateY(0);}}
button{padding:10px 18px;border:none;border-radius:30px;background:#00c6ff;color:white;font-weight:bold;cursor:pointer;margin:5px;transition:0.3s;}
button:hover{background:#00a6d6;}
.progress{height:10px;background:rgba(255,255,255,0.2);border-radius:20px;margin-bottom:20px;}
.progress-bar{height:10px;background:#00c6ff;border-radius:20px;width:0%;transition:0.3s;}
.quiz-question{margin-bottom:20px;padding:15px;background:rgba(255,255,255,0.15);border-radius:15px;}
label{display:block;margin:6px 0;cursor:pointer;}
.result{margin-top:15px;padding:15px;border-radius:15px;background:rgba(0,255,0,0.2);}
.wrong{background:rgba(255,0,0,0.3);}
.correct{background:rgba(0,255,0,0.2);}
.explain{font-size:14px;color:#fff;margin-top:5px;}
</style>
</head>
<body>
<header>İlk Yardım ve Sakatlanmalara Müdahale</header>
<div class="container">
  <div class="progress"><div class="progress-bar" id="progressBar"></div></div>
  <div id="content"></div>
  <div style="text-align:center;">
    <button onclick="prevPage()">Önceki</button>
    <button onclick="nextPage()">Sonraki</button>
  </div>
</div>
<script>
// -------------------------
// 50 Sayfa İçerik Örneği
const pages = Array.from({length:50},(_,i)=>`Sayfa ${i+1}: İlk yardım rehberi ve sakatlanmalara müdahale bilgisi, örnek uygulama ve öneriler.`);

// -------------------------
// 50 Quiz Sorusu Örneği
const quiz = Array.from({length:50},(_,i)=>({
  q:`Soru ${i+1}: İlk yardım uygulaması ile ilgili hangi doğru?`,
  a:["Doğru seçenek","Yanlış 1","Yanlış 2"],
  c:0,
  explain:"Doğru seçenek uygulanmalıdır."
}));

let current=0;

// -------------------------
function render(){
  const content = document.getElementById("content");
  content.innerHTML = "";
  if(current < pages.length){
    content.innerHTML = `<div class="card"><h3>Sayfa ${current+1}</h3><p>${pages[current]}</p></div>`;
  }else{
    let quizHTML = `<div class="card"><h3>Quiz</h3>`;
    quiz.forEach((item,i)=>{
      quizHTML += `<div class="quiz-question" id="qdiv${i}">
        <p>${i+1}. ${item.q}</p>
        ${item.a.map((opt,oi)=>`<label><input type="radio" name="q${i}" value="${oi}"> ${opt}</label>`).join("")}
      </div>`;
    });
    quizHTML += `<button onclick="checkQuiz()">Cevapları Kontrol Et</button>
                 <div id="quizResult"></div>
                 </div>`;
    content.innerHTML = quizHTML;
  }
  document.getElementById("progressBar").style.width = ((current+1)/(pages.length+1)*100)+"%";
}

// -------------------------
function nextPage(){
  if(current < pages.length) current++;
  render();
}
function prevPage(){
  if(current > 0) current--;
  render();
}

// -------------------------
function checkQuiz(){
  let score = 0;
  quiz.forEach((item,i)=>{
    const selected = document.querySelector(`input[name=q${i}]:checked`);
    const div = document.getElementById(`qdiv${i}`);
    div.classList.remove("wrong","correct");
    if(selected && parseInt(selected.value)===item.c){
      score++;
      div.classList.add("correct");
    }else{
      div.classList.add("wrong");
      // Yanlış cevabı gösterme
      let explainDiv = document.createElement("div");
      explainDiv.className="explain";
      explainDiv.innerHTML = `Doğru Cevap: ${item.a[item.c]} - ${item.explain}`;
      div.appendChild(explainDiv);
    }
  });
  document.getElementById("quizResult").innerHTML =
    `<div class="result">Doğru Sayısı: ${score} / ${quiz.length}</div>`;
}

render();
</script>
</body>
</html>
